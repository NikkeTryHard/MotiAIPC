<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- App Theme Colors -->
    <Color x:Key="AppBackgroundColor">#F8F9FA</Color>
    <Color x:Key="CardBorderColor">#E0E0E0</Color>
    <Color x:Key="PrimaryTextColor">#212529</Color>
    <Color x:Key="SecondaryTextColor">#6C757D</Color>
    <Color x:Key="AccentColor">#0D6EFD</Color>
    <Color x:Key="AccentSecondaryColor">#FD7E14</Color>
    <Color x:Key="DangerColor">#DC3545</Color>
    <Color x:Key="LightBackgroundColor">#FFFFFF</Color>
    <Color x:Key="DarkBackgroundColor">#121212</Color>

    <!-- Font Families -->
    <OnPlatform x:Key="InterRegular" x:TypeArguments="x:String">
        <On Platform="Android" Value="Inter-Regular.ttf#Inter" />
        <On Platform="iOS" Value="Inter-Regular" />
        <On Platform="Windows" Value="Assets/Fonts/Inter-Regular.ttf#Inter" />
    </OnPlatform>
    <OnPlatform x:Key="InterBold" x:TypeArguments="x:String">
        <On Platform="Android" Value="Inter-Bold.ttf#Inter" />
        <On Platform="iOS" Value="Inter-Bold" />
        <On Platform="Windows" Value="Assets/Fonts/Inter-Bold.ttf#Inter" />
    </OnPlatform>
    
    <!-- Base Style for ContentPage -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource AppBackgroundColor}" />
    </Style>

    <!-- Glassmorphism Card Style -->
    <Style x:Key="CardView" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource CardBorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="32" />
        <Setter Property="BackgroundColor">
            <Color>
                <x:Arguments>
                    <x:Single>1.0</x:Single>   <!-- R -->
                    <x:Single>1.0</x:Single>   <!-- G -->
                    <x:Single>1.0</x:Single>   <!-- B -->
                    <x:Single>0.65</x:Single>  <!-- Alpha -->
                </x:Arguments>
            </Color>
        </Setter>
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="20" />
        </Setter>
    </Style>

    <!-- Typography Styles -->
    <Style x:Key="Headline" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="FontFamily" Value="{StaticResource InterBold}" />
        <Setter Property="FontSize" Value="28" />
    </Style>

    <Style x:Key="SubHeadline" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="FontFamily" Value="{StaticResource InterBold}" />
        <Setter Property="FontSize" Value="22" />
    </Style>

    <Style x:Key="Body" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="FontFamily" Value="{StaticResource InterRegular}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="SecondaryText" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}" />
        <Setter Property="FontFamily" Value="{StaticResource InterRegular}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Button Styles -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="TextColor" Value="#FFFFFF" />
        <Setter Property="FontFamily" Value="{StaticResource InterBold}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20,10" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#0B5ED7" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#A0A0A0" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#F0F0F0" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="FontFamily" Value="{StaticResource InterBold}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20,10" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#E0E0E0" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#A0A0A0" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="DangerButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource DangerColor}" />
        <Setter Property="TextColor" Value="#FFFFFF" />
        <Setter Property="FontFamily" Value="{StaticResource InterBold}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20,10" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#B02A37" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#A0A0A0" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- IconButton Style -->
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="CornerRadius" Value="20" />
    </Style>

</ResourceDictionary>
